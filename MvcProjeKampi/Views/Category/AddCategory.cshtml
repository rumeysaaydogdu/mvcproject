@model EntityLayer.Concrete.Category  /*model içağırıyoruz. entity layer içindeki concrete içindeki category yi çağırıyoruz*/

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Kategory Adı")
    @Html.TextBoxFor(x => x.CategoryName)
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br /> <br />
    @Html.Label("Açıklamayı yazınız")
    @Html.TextBoxFor(x => x.CategoryDescription)
    @Html.ValidationMessageFor(x => x.CategoryDescription)
    <br /> <br />
    <button>Kaydet</button>
</div>
}

@*Linq Expression ifadesi (lambda operasyonu) x => x.   x öyle ki demek*@


